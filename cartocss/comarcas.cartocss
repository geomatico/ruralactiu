/** simple visualization */

#comarcas{
  polygon-fill: #000000;
  polygon-opacity: 0.1;
  line-color: #FFF;
  line-width: 3;
  line-opacity: 1;
}

#comarcas::labels[zoom>8] {
  text-name: [nombre];
  text-face-name: 'DejaVu Sans Book';
  text-size: 17;
  text-label-position-tolerance: 10;
  text-fill: #000;
  text-halo-fill: #FFF;
  text-halo-radius: 2;
  text-dy: -10;
  text-allow-overlap: false;
  text-placement: point;
  text-placement-type: simple;
}

